<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freadapp.fread.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical">

            <Button
                android:id="@+id/signin_page_launch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In Page" />

            <TextView
                android:id="@+id/main_activity_text"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_place_holder"
                tools:text="Main Activity" />



        </LinearLayout>

</android.support.constraint.ConstraintLayout>
